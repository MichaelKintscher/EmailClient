<Page x:ConnectionId='1'
    x:Class="WindowsApp.Pages.InboxPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsApp.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="using:Domain.Common" xmlns:emails="using:Domain.Messages.Emails" xmlns:Converters="using:WindowsApp.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Converters:ObjectToEmailConverter x:Key="ObjectToEmailConverter"></Converters:ObjectToEmailConverter>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <!-- Accounts List -->
        <Border Grid.Column="0"
                BorderBrush="#444444"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Margin="20"
                           Text="Accounts"
                           Style="{StaticResource SubtitleTextBlockStyle}"></TextBlock>

                <ListView x:ConnectionId='17' x:Name="AccountsListView"
                          Grid.Row="1"
                                                                      
                          SelectionMode="Single"
                                                                              >
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                            <Setter Property="Margin" Value="0"></Setter>
                            <Setter Property="Padding" Value="0"></Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate                                           >
                            <Grid x:ConnectionId='23' Height="80"
                                  Padding="20,10,20,10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>

                                <TextBlock x:ConnectionId='24' Grid.Row="0"
                                           Margin="0,0,0,2"
                                                                       
                                           Style="{StaticResource BodyStrongTextBlockStyle}"
                                           FontSize="16"></TextBlock>

                                <TextBlock x:ConnectionId='25' Grid.Row="1"
                                                                   
                                           FontSize="14"></TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <TextBlock Grid.Row="2"
                           Margin="20"
                           Text="Folders"
                           Style="{StaticResource SubtitleTextBlockStyle}"></TextBlock>

                <ListView x:ConnectionId='18' x:Name="FoldersListView"
                          Grid.Row="3"
                                                        
                          SelectionMode="Single">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                            <Setter Property="Margin" Value="0"></Setter>
                            <Setter Property="Padding" Value="0"></Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate                      >
                            <Grid x:ConnectionId='20'>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:ConnectionId='21' Grid.Column="0"
                                           Margin="20,5,20,5"
                                                          
                                           Style="{StaticResource BodyStrongTextBlockStyle}"
                                           FontSize="16"></TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
        
        <!-- Messages List -->
        <Border Grid.Column="1"
                BorderBrush="#444444"
                BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Margin="20,10,10,10"
                           Text="Inbox"
                           Style="{StaticResource SubtitleTextBlockStyle}"></TextBlock>

                <ListView x:ConnectionId='12' x:Name="MessagesListView"
                          Grid.Row="1"
                                                         
                          SelectionMode="Single"
                          IsItemClickEnabled="True"
                                                                >
                    <ListView.ItemTemplate>
                        <DataTemplate                          >
                            <Border x:ConnectionId='14' BorderBrush="#333333"
                                    BorderThickness="0,0,0,1">
                                <Grid Padding="10,10,10,20">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <TextBlock x:ConnectionId='15' Grid.Row="0"
                                               Margin="0,0,0,2"
                                                                      
                                               TextWrapping="NoWrap"
                                               Style="{StaticResource BodyStrongTextBlockStyle}"></TextBlock>

                                    <TextBlock x:ConnectionId='16' Grid.Row="1"
                                               TextWrapping="NoWrap"
                                                                      ></TextBlock>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Border>
        
        <!-- Message Details -->

        <Grid Grid.Column="2"
              Background="#111111">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <!-- Subject -->
            <Border Grid.Row="0"
                    Margin="10,10,10,5"
                    Background="#222222"
                    BorderBrush="#333333"
                    BorderThickness="0,0,0,0">
                <ContentPresenter x:ConnectionId='9'                                                                                                                 >
                    <ContentPresenter.ContentTemplate>
                        <DataTemplate                          >
                            <TextBlock x:ConnectionId='11' Margin="20,10,20,10"
                                                              
                                       TextWrapping="WrapWholeWords"
                                       Style="{StaticResource SubtitleTextBlockStyle}"></TextBlock>

                        </DataTemplate>
                    </ContentPresenter.ContentTemplate>
                </ContentPresenter>
            </Border>

            <!-- Body -->
            <Border Grid.Row="1"
                    Margin="10"
                    Background="#222222">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <!-- Sender Info -->
                    <ContentPresenter x:ConnectionId='2' Grid.Row="0"
                                      Grid.Column="0"
                                                                                                                                                      >
                        <ContentPresenter.ContentTemplate>
                            <DataTemplate                          >
                                <StackPanel x:ConnectionId='5' Margin="20">
                                    <TextBlock x:ConnectionId='6'                       ></TextBlock>
                                    <TextBlock x:ConnectionId='7'                     ></TextBlock>
                                    <TextBlock x:ConnectionId='8'                          ></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ContentPresenter.ContentTemplate>
                    </ContentPresenter>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="0"
                                Grid.Column="1"
                                Margin="15,20,15,20"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">
                        <Button Margin="5">
                            <SymbolIcon Symbol="MailReply"></SymbolIcon>
                        </Button>
                        <Button Margin="5">
                            <SymbolIcon Symbol="MailReplyAll"></SymbolIcon>
                        </Button>
                        <Button Margin="5">
                            <SymbolIcon Symbol="MailForward"></SymbolIcon>
                        </Button>
                    </StackPanel>

                    <!-- Message Body -->
                    <!--<TextBlock Grid.Row="1"
                                           Grid.ColumnSpan="2"
                                           Margin="20"
                                           Text="{x:Bind Body}"
                                           TextWrapping="WrapWholeWords"></TextBlock>-->
                    <WebView2 x:ConnectionId='3' x:Name="ContentWebView"
                              Grid.Row="1"
                              Grid.ColumnSpan="2"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"
                              Source="https://www.google.com"></WebView2>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>

