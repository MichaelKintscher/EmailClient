<Page x:ConnectionId='1'
    x:Class="WindowsApp.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsApp.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="using:Domain.Common"
    xmlns:Converters="using:WindowsApp.Converters"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Converters:BoolToVisibilityConverter x:Key="TrueToVisibleConverter" TrueVisibility="Visible" FalseVisibility="Collapsed"></Converters:BoolToVisibilityConverter>
        <Converters:BoolToVisibilityConverter x:Key="FalseToVisibleConverter" TrueVisibility="Collapsed" FalseVisibility="Visible"></Converters:BoolToVisibilityConverter>
        <Converters:BoolToInverseBoolConverter x:Key="BoolToInverseBoolConverter"></Converters:BoolToInverseBoolConverter>
    </Page.Resources>

    <Grid>
        <!-- The content dialog for authentication errors. -->
        <ContentDialog x:ConnectionId='2' x:Name="OauthErrorDialog"
                       PrimaryButtonText="Try Again"
                       CloseButtonText="Cancel"
                       Title="Authentication Error">
            <TextBlock x:ConnectionId='26' x:Name="OAuthErrorTextBlock"></TextBlock>
        </ContentDialog>
        
        <!-- The content dialog for entering an OAuth code. -->
        <ContentDialog x:ConnectionId='3' x:Name="FinishAddingServiceDialog"
                       PrimaryButtonText="Finish"
                       CloseButtonText="Nevermind"
                       Title="Authentication Code">
            <StackPanel>
                <WebView2 x:ConnectionId='24' x:Name="OAuthWebView"
                          MinHeight="500"
                          MinWidth="500"
                          Source="https://www.microsoft.com"></WebView2>
                <TextBlock Text="Paste the code from your web browser here."
                           Margin="0,0,0,5"></TextBlock>
                <TextBox x:ConnectionId='25' x:Name="ServiceOauthCodeTextBox"></TextBox>
            </StackPanel>
        </ContentDialog>
        
        <!-- The content dialog for confirming account removal. -->
        <ContentDialog x:ConnectionId='4' x:Name="ConfirmRemoveAccountDialog"
                       PrimaryButtonText="Remove"
                       CloseButtonText="Nevermind"
                       Title="Confirm Remove Account">
            <StackPanel>
                <TextBlock Text="Are you sure you want to remove this account?"></TextBlock>
                <StackPanel Margin="0,20,0,0">
                    <!-- Display for the account details of the account to be removed. -->
                    <ContentControl x:ConnectionId='17' x:Name="AccountToRemoveContentControl">
                        <ContentControl.ContentTemplate>
                            <DataTemplate                                           >
                                <StackPanel x:ConnectionId='19'>
                                    <TextBlock x:ConnectionId='20'                             ></TextBlock>
                                    <PersonPicture x:ConnectionId='21' MaxWidth="50"
                                                                                       
                                                                                  ></PersonPicture>
                                    <TextBlock x:ConnectionId='22'                         ></TextBlock>
                                    <TextBlock x:ConnectionId='23'                         ></TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ContentControl.ContentTemplate>
                    </ContentControl>
                </StackPanel>
            </StackPanel>
        </ContentDialog>
        
        <ScrollViewer>
            <!-- Accounts block -->
            <StackPanel Margin="12">
                <TextBlock Style="{StaticResource TitleTextBlockStyle}"
                               Text="Accounts"></TextBlock>

                <!-- Accounts List -->
                <ListView x:ConnectionId='5' x:Name="AccountsListView"
                                                                          
                              SelectionMode="None">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
                        </Style>
                    </ListView.ItemContainerStyle>
                    <ListView.ItemTemplate>
                        <DataTemplate                                           >
                            <Grid x:ConnectionId='8'>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <TextBox x:ConnectionId='9' Grid.Column="0"
                                         VerticalAlignment="Center"
                                         Margin="0,10,10,10"
                                                                                  ></TextBox>
                                <PersonPicture x:ConnectionId='10' Grid.Column="1"
                                               VerticalAlignment="Center"
                                               Margin="10"
                                               MaxWidth="50"
                                                                                   
                                                                              ></PersonPicture>
                                <TextBlock x:ConnectionId='11' Grid.Column="2"
                                           VerticalAlignment="Center"
                                           Margin="10"
                                                                   ></TextBlock>
                                <TextBlock x:ConnectionId='12' Grid.Column="3"
                                           VerticalAlignment="Center"
                                           Margin="10"
                                                                   ></TextBlock>
                                <StackPanel x:ConnectionId='13' Grid.Column="4"
                                            VerticalAlignment="Center"
                                            Margin="10"
                                            Orientation="Horizontal"
                                                                                                                              >
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xF386;"></FontIcon>
                                    <TextBlock Text="Connected"></TextBlock>
                                </StackPanel>
                                <StackPanel x:ConnectionId='14' Grid.Column="4"
                                            VerticalAlignment="Center"
                                            Margin="10"
                                            Orientation="Horizontal"
                                                                                                                               >
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xE871;"></FontIcon>
                                    <TextBlock Text="Connection Error"></TextBlock>
                                </StackPanel>
                                <TextBlock x:ConnectionId='15' Grid.Column="5"
                                           VerticalAlignment="Center"
                                           Margin="10"
                                                                     ></TextBlock>
                                <Button x:ConnectionId='16' Grid.Column="6"
                                        VerticalAlignment="Center"
                                        Padding="10"
                                        HorizontalAlignment="Center"
                                                         
                                                                         >
                                    <FontIcon FontFamily="{ThemeResource SymbolThemeFontFamily}"
                                              Glyph="&#xE107;"></FontIcon>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
                <!-- Button is disabled when no internet connection is available. To do this, bind 
                        IsEnabled="{x:Bind InternetConnectionAvailable, Mode=OneWay}" -->
                <Button x:ConnectionId='6' x:Name="AuthenticateGoogleButton"
                        Margin="0,20,20,20"
                        IsEnabled="True"
                                                              >Add Google Account</Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>

